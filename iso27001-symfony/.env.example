# Copy to .env.local and fill in values
# A.10: Never commit real secrets — use secrets manager in production

APP_NAME=iso27001-api
APP_ENV=development
APP_SECRET=CHANGE_ME_IN_PRODUCTION
APP_VERSION=1.0.0
APP_DEBUG=true

# A.10: Database — CHANGE IN PRODUCTION
DATABASE_URL=postgresql://symfony:CHANGE_ME@localhost:5432/iso27001?serverVersion=15

# A.9: JWT RSA keys — generated by jwt_setup.sh
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=CHANGE_ME_IN_PRODUCTION

# CORS
CORS_ALLOW_ORIGIN='^https?://(localhost|127\.0\.0\.1)(:[0-9]+)?$'

# Redis
REDIS_URL=redis://localhost:6379

# A.10: Field-level encryption key — must be exactly 32 bytes in production
ENCRYPTION_KEY=dev-only-32-byte-key-change-me!!
