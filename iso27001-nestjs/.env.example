# Application
APP_NAME=iso27001-api
APP_ENV=development
APP_PORT=3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:pass@localhost:5432/iso27001

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT — generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=change-me-to-a-64-byte-random-hex-string
JWT_ACCESS_EXPIRES_IN=30m
JWT_REFRESH_EXPIRES_IN=7d

# A.10: AES-256-GCM field encryption key — must be exactly 32 UTF-8 bytes
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex').slice(0,32))"
ENCRYPTION_KEY=change-me-to-exactly-32-bytes!!

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000

# AWS (optional — no-op without valid credentials)
AWS_REGION=us-east-1
AWS_CLOUDWATCH_NAMESPACE=ISO27001/API
