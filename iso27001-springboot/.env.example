# ── Application ───────────────────────────────────────────────────────────────
APP_ENV=development
APP_NAME=iso27001-springboot

# ── Database ──────────────────────────────────────────────────────────────────
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/iso27001
SPRING_DATASOURCE_USERNAME=user
SPRING_DATASOURCE_PASSWORD=pass

# ── Redis ─────────────────────────────────────────────────────────────────────
SPRING_DATA_REDIS_HOST=localhost
SPRING_DATA_REDIS_PORT=6379

# ── Security (A.9 / A.10) ─────────────────────────────────────────────────────
# Generate: openssl rand -base64 64
JWT_SECRET=change-me-to-random-256-bit-secret
JWT_ACCESS_EXPIRES_IN=30m
JWT_REFRESH_EXPIRES_IN=7d

# AES-256-GCM key — must be exactly 32 bytes (base64-encoded)
# Generate: openssl rand -base64 32
ENCRYPTION_KEY=change-me-to-exactly-32-bytes!!!

# ── AWS (optional — A.12) ─────────────────────────────────────────────────────
AWS_DEFAULT_REGION=eu-west-1
AWS_CLOUDWATCH_NAMESPACE=ISO27001/API
