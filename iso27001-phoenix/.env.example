# Copy to .env and fill in real values.
# A.10: Never commit secrets — see .gitignore.

APP_NAME=iso27001-phoenix
APP_VERSION=1.0.0
APP_ENV=development
PORT=8004

# A.10: JWT — generate with: mix guardian.gen.secret
JWT_SECRET=change-me-in-production
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# A.10: AES-256-GCM — must be exactly 32 bytes
ENCRYPTION_KEY=dev-only-32-byte-key-change-me!!

# Phoenix secret key base — generate with: mix phx.gen.secret
SECRET_KEY_BASE=generate-with-mix-phx-gen-secret-64-chars

# A.9: CORS — comma-separated, no wildcard in production
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Database (PostgreSQL)
DATABASE_URL=ecto://user:pass@localhost/iso27001

# Redis (optional — graceful GenServer in-process fallback if unavailable)
REDIS_URL=redis://localhost:6379/0
